{
  "name": "eaglet",
  "version": "1.0.0",
  "author": "jeffchung",
  "scripts": {
    "start": "npx --no-install nodemon  ",
    "production": "NODE_ENV=production npx --no-install pm2 start src/httpServer.js --name 'eaglet'",
    "reset": "ts-node  -r tsconfig-paths/register  bin/resetDatabase.ts",
    "test": "npx --no-install  jest --watchAll",
    "testProd": "NODE_ENV=production  npx --no-install  jest --watchAll --runInBand --useStderr"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "engines": {
    "node": ">= 9"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "@types/node": "^10.1.2",
    "co": "^4.6.0",
    "debug": "^2.2.0",
    "fs-extra": "^5.0.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^2.0.1",
    "koa-convert": "^1.2.0",
    "koa-json": "^1.1.1",
    "koa-logger": "^1.3.0",
    "koa-onerror": "^3.0.1",
    "koa-passport": "^4.0.1",
    "koa-router": "^7.0.0",
    "koa-session": "^5.5.1",
    "koa-static-plus": "^0.1.1",
    "koa-views": "^5.0.1",
    "lodash": "^4.11.1",
    "mysql2": "^1.4.2",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2-jwt-bearer": "^0.2.0",
    "pm2": "^2.9.1",
    "reflect-metadata": "^0.1.12",
    "require-dir": "^1.0.0",
    "sparkpost": "^2.1.2",
    "typeorm": "^0.2.6",
    "uuid": "^3.1.0",
    "validator": "^9.2.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "chokidar": "^1.5.1",
    "eslint": "^2.11.1",
    "eslint-config-standard": "^5.2.0",
    "eslint-plugin-promise": "^1.3.1",
    "eslint-plugin-standard": "^1.3.2",
    "jest": "^21.0.1",
    "nodemon": "^1.14.11",
    "should": "^8.3.0",
    "supertest": "^1.2.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "tsconfig-paths": "^3.3.2",
    "typescript": "^2.8.3"
  },
  "license": "MIT"
}
